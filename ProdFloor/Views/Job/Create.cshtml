@model JobViewModel
@{
    ViewBag.Title = "Edit Job";
    Layout = "_AdminLayoutWO";
}

<ul class="nav nav-tabs col-sm-9" role="tablist">
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Main" ? "active" : " ")" data-toggle="tab" href="#home" role="tab">Job</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Extension" ? "active" : " ")  @(Model.CurrentJobExtension.JobExtensionID == 0 ? "disabled" : " ")" data-toggle="tab" href="#jobextension" role="tab">Add. Job Info</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "HydroSpecifics" ? "active" : " ")  @(Model.CurrentHydroSpecifics.HydroSpecificsID == 0 ? "disabled" : " ")" data-toggle="tab" href="#hydrospecifics" role="tab">Hydro Specifics</a>
    </li>
    <li class="nav-item">
        <a class="nav-link disabled" data-toggle="tab" href="#messages" role="tab">Messages</a>
    </li>
    @*<li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#settings" role="tab">Settings</a>
        </li>*@
</ul>
<!-- Tab panes -->
<div class="tab-content" style="padding:20px">
    <div class="tab-pane @(Model.CurrentTab == "Main" ? "active" : " ")" id="home" role="tabpanel">
        @if (Model.CurrentJobExtension.JobExtensionID == 0)
        {
            @Html.Partial("JobFormNext", Model.CurrentJob)
        }
        else
        {
            @Html.Partial("JobForm", Model.CurrentJob)
        }

    </div>
    <div class="tab-pane @(Model.CurrentTab == "Extension" ? "active" : " ")" id="jobextension" role="tabpanel">
        @Html.Partial("JobExtensionForm", Model.CurrentJobExtension)
    </div>
    <div class="tab-pane @(Model.CurrentTab == "HydroSpecifics" ? "active" : " ")" id="hydrospecifics" role="tabpanel">
        @Html.Partial("HydroSpecificsForm", Model.CurrentHydroSpecifics)
    </div>
    @*<div class="tab-pane" id="messages" role="tabpanel">...</div>
        <div class="tab-pane" id="settings" role="tabpanel">...</div>*@
</div>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>