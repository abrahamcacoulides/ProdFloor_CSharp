@model JobViewModel
@{
    ViewBag.Title = "Edit Job";
    Layout = "_AdminLayoutWO";
}

<ul class="nav nav-tabs col-sm-10" role="tablist">
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Main" ? "active" : " ")" data-toggle="tab" href="#home" role="tab">Job</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Extension" ? "active" : " ")  @(Model.CurrentJobExtension.JobExtensionID == 0 ? "disabled" : " ")" data-toggle="tab" href="#jobextension" role="tab">Add. Job Info</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "HydroSpecifics" ? "active" : " ")  @(Model.CurrentHydroSpecific.HydroSpecificID == 0 ? "disabled" : " ")" data-toggle="tab" href="#hydrospecifics" role="tab">Hydro Specifics</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "GenericFeatures" ? "active" : " ")  @(Model.CurrentGenericFeatures.GenericFeaturesID == 0 ? "disabled" : " ")" data-toggle="tab" href="#genericfeatures" role="tab">Generic Features</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.CurrentTab == "Indicators" ? "active" : " ")  @(Model.CurrentIndicators.IndicatorsID == 0 ? "disabled" : " ")" data-toggle="tab" href="#indicators" role="tab">Indicators</a>
    </li>
    <li class="nav-item">
        <a class="nav-link disabled" data-toggle="tab" href="#messages" role="tab">Messages</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#settings" role="tab">Settings</a>
    </li>
</ul>
<!-- Tab panes -->
<div class="tab-content" style="padding:20px">
    <div class="tab-pane @(Model.CurrentTab == "Main" ? "active" : " ")" id="home" role="tabpanel">
        @if (Model.CurrentJobExtension.JobExtensionID == 0)
        {
            @Html.Partial("JobFormNext", Model.CurrentJob)
        }
        else
        {
            @Html.Partial("JobForm", Model.CurrentJob)
        }

    </div>
    <div class="tab-pane @(Model.CurrentTab == "Extension" ? "active" : " ")" id="jobextension" role="tabpanel">
        @Html.Partial("JobExtensionForm", Model.CurrentJobExtension)
    </div>
    <div class="tab-pane @(Model.CurrentTab == "HydroSpecifics" ? "active" : " ")" id="hydrospecifics" role="tabpanel">
        @if (Model.CurrentHydroSpecific.JobID != 0)
        {
            @Html.Partial("HydroSpecificForm", Model.CurrentHydroSpecific)
        }
    </div>
    <div class="tab-pane @(Model.CurrentTab == "GenericFeatures" ? "active" : " ")" id="genericfeatures" role="tabpanel">
        @if (Model.CurrentGenericFeatures.JobID != 0)
        {
            @Html.Partial("GenericInfoForm", Model.CurrentGenericFeatures)
        }
    </div>
    <div class="tab-pane @(Model.CurrentTab == "Indicators" ? "active" : " ")" id="indicators" role="tabpanel">
        @if (Model.CurrentIndicators.JobID != 0)
        {
            @Html.Partial("IndicatorsForm", Model.CurrentIndicators)
        }
    </div>
</div>